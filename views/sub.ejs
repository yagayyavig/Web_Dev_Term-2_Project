<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css" />
  <link href="/css/style.css" rel="stylesheet" />
  <title>Posts in <%= subname %></title>
</head>
<body>
  <main>
    <div class="authOptions">
      <h1>Posts in: <%= subname %></h1>
      <a role="button" href="/subs/list">‚Üê Back to Sub List</a>
      <a role="button" href="/posts">All Posts</a>
    </div>

    <% if (posts.length === 0) { %>
      <p>No posts found in this subgroup yet.</p>
    <% } else { %>
      <ul>
        <% posts.forEach(post => { %>
          <li>
            <a href="/posts/show/<%= post.id %>"><%= post.title %></a><br>
            <small>By <%= post.creator.uname %> | <%= new Date(post.timestamp).toLocaleString() %></small>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>
