<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
    <title>Subs</title>
  </head>
  <body>
    <main>
      <div class="authOptions">
        <h1>Sub Groups</h1>
        <a role="button" href="/posts">Home</a>
      </div>

      <% if (subs.length > 0) { %>
        <ul>
          <% subs.forEach(sub => { %>
            <li>
              <a href="/subs/<%= sub.id %>"><%= sub.name %></a>
              <p><%= sub.description %></p>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No subgroups found. Please create one in the database.</p>
      <% } %>
    </main>
  </body>
</html>
